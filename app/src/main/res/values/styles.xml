<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="Widget.AppCompat.ProgressBar.White">
        <item name="color">@color/white</item>
    </style>

    <style name="ButtonPinkTextStyle" parent="@style/Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_shape</item>
        <item name="android:textSize">@dimen/textsize_large</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="SwipeLayout">
        <item name="android:paddingBottom">1px</item>
        <item name="android:background">#e5e5e5</item>
    </style>

    <style name="CenterTextView">
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@color/center_text</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="LeftTextView">
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
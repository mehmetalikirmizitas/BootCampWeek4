<?xml version="1.0" encoding="utf-8"?>
<ru.rambler.libs.swipe_layout.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_layout"
    style="@style/SwipeLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/text_view_pos"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:gravity="center"
            tools:text="#1" />

        <TextView
            style="@style/CenterTextView"
            android:id="@+id/taskDescription"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Only Left" />

    </LinearLayout>

    <!--LEFT-->
    <LinearLayout
        android:id="@+id/left_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:bring_to_clamp="150dp"
        app:clamp="self"
        app:gravity="left"
        app:sticky="100dp"
        app:sticky_sensitivity="0.5">

        <TextView
            android:background="#f00"
            style="@style/LeftTextView"
            android:id="@+id/deleteButton"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Sil"
            android:textSize="12dp" />
        <TextView
            style="@style/LeftTextView"
            android:id="@+id/completeButton"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#00f"
            android:text="Tamamla" />


    </LinearLayout>
</ru.rambler.libs.swipe_layout.SwipeLayout>